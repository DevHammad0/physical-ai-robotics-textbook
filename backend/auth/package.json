{
  "name": "better-auth-service",
  "version": "1.0.0",
  "description": "Better-auth authentication service for Physical AI & Robotics Textbook",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch server.ts",
    "start": "tsx server.ts",
    "start:dev": "tsx watch server.ts",
    "migrate": "npx @better-auth/cli migrate --config better-auth.ts",
    "migrate:yes": "npx @better-auth/cli migrate --config better-auth.ts --yes",
    "init-tables": "tsx scripts/init-auth-tables.ts",
    "fix-tables": "tsx scripts/fix-user-table.ts",
    "verify-schema": "tsx scripts/verify-auth-schema.ts",
    "postinstall": "node patch-package.js"
  },
  "dependencies": {
    "@vercel/node": "^3.0.7",
    "better-auth": "^1.4.3",
    "dotenv": "^16.4.5",
    "kysely": "^0.28.5",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}

