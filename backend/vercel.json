{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "includeFiles": [
          "book-source/**",
          "routers/**",
          "services/**",
          "models/**",
          "config.py"
        ],
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "auth/api/auth/[...all].ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "auth/lib/**",
          "auth/better-auth.ts",
          "auth/package.json",
          "auth/pnpm-lock.yaml",
          "auth/tsconfig.json"
        ],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "auth/api/auth/[...all].ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ]
}
