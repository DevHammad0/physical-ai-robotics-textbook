<?xml version="1.0"?>
<!-- Two-link robot URDF example
     Simulation environment: Gazebo 11+
     Description: Simple 2-link planar arm for learning URDF basics
-->
<robot name="two_link_robot">

  <!-- Base Link (mounting platform) -->
  <link name="base_link">
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.5" ixy="0" ixz="0"
               iyy="0.5" iyz="0" izz="0.5"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
      <material name="base_material">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 1: Base to Link 1 (revolute around Z-axis) -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>  <!-- Rotate around Z-axis -->
    <limit lower="0" upper="3.14159" effort="5.0" velocity="1.0"/>
    <dynamics damping="0.01" friction="0.05"/>
  </joint>

  <!-- Link 1: Upper arm -->
  <link name="link1">
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>  <!-- Center of mass at middle of link -->
      <inertia ixx="0.2" ixy="0" ixz="0"
               iyy="0.2" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.3"/>  <!-- 5cm x 5cm x 30cm -->
      </geometry>
      <material name="link_material">
        <color rgba="0.9 0.9 0.9 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.3"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 2: Link 1 to Link 2 (revolute around Z-axis) -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>  <!-- At tip of link1 -->
    <axis xyz="0 0 1"/>  <!-- Rotate around Z-axis -->
    <limit lower="-3.14159" upper="3.14159" effort="3.0" velocity="1.0"/>
    <dynamics damping="0.01" friction="0.05"/>
  </joint>

  <!-- Link 2: Forearm / End effector -->
  <link name="link2">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>  <!-- Center of mass -->
      <inertia ixx="0.1" ixy="0" ixz="0"
               iyy="0.1" iyz="0" izz="0.05"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.2"/>  <!-- 4cm x 4cm x 20cm -->
      </geometry>
      <material name="link_material"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.2"/>
      </geometry>
    </collision>
  </link>

</robot>
